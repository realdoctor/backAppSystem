<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.realdoctor.back.dal.dao.UserInfoDao">
	<!-- 用户基本信息 -->
	<select id="getUserInfo" resultMap="BaseResultMap" parameterType="com.realdoctor.back.dal.pojo.User">
		select
		<include refid="columns"/>
		from user_info t
		<trim prefix="where" prefixOverrides="and|or">
			<choose>
				<when test="userId!=null">
					t.user_id = #{userId,jdbcType=INTEGER}
				</when>
				<when test="idNo!=null and idNo !=''">
					and t.mobile_phone = #{idNo,jdbcType=VARCHAR}
				</when>
				<otherwise>
					and t.mobile_phone = #{mobilePhone,jdbcType=VARCHAR}
				</otherwise>
			</choose>
		</trim>
	</select>
</mapper>
