<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kanglian.healthcare.back.dal.dao.NoticeMessageDao">
	<resultMap type="com.kanglian.healthcare.back.dal.pojo.NoticeMessage" id="BaseResultMap">
		<result property="id" column="id" jdbcType="INTEGER"/>
		<result property="noticeTypeId" column="notice_type_id" jdbcType="VARCHAR"/>
		<result property="noticeType" column="type" jdbcType="VARCHAR"/>
		<result property="userId" column="user_id" jdbcType="VARCHAR"/>
		<result property="content" column="content" jdbcType="LONGVARCHAR"/>
		<result property="addTime" column="add_time" jdbcType="TIMESTAMP"/>
	</resultMap>

	<sql id="columns">
		t.id,
		t.notice_type_id,
		t.user_id,
		t.content,
		t.add_time
	</sql>

	<select id="query" resultMap="BaseResultMap" parameterType="com.easyway.business.framework.mybatis.query.ConditionQuery">
		select
			t.id,
			t.notice_type_id,
			t1.type,
			t.user_id,
			t.content,
			t.add_time
		from notice_message t left join notice_type t1 on t.notice_type_id = t1.id
		<include refid="conditionQuery.core" />
		order by
		<choose>
		<when test="paramMap.orderCol!=null">
		${paramMap.orderCol}
		</when>
		<otherwise>
		id desc
		</otherwise>
		</choose>
		<if test="paramMap.pageSize > 0">
		  limit #{paramMap.pageOffset},#{paramMap.pageSize}
		</if>
	</select>

	<select id="queryCnt" parameterType="com.easyway.business.framework.mybatis.query.ConditionQuery" resultType="java.lang.Integer">
		select count(*) from notice_message t
		<include refid="conditionQuery.core" />
	</select>

	<select id="get" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="columns"/>
		from notice_message t
		where t.id = #{id,jdbcType=INTEGER}
	</select>

	<delete id="delete" parameterType="com.kanglian.healthcare.back.dal.pojo.NoticeMessage">
		delete from notice_message where 1=1
		and id=#{id,jdbcType=INTEGER}
	</delete>

	<insert id="save" parameterType="com.kanglian.healthcare.back.dal.pojo.NoticeMessage" useGeneratedKeys="true" keyProperty="id">
		insert into notice_message (
		notice_type_id,
		user_id,
		content,
		add_time
		)
		values(
		#{noticeTypeId,jdbcType=VARCHAR},
		#{userId,jdbcType=VARCHAR},
		#{content,jdbcType=LONGVARCHAR},
		#{addTime,jdbcType=TIMESTAMP}
		)
	</insert>

	<update id="update" parameterType="com.kanglian.healthcare.back.dal.pojo.NoticeMessage">
		update notice_message
		<set>
		  <if test="noticeTypeId != null">notice_type_id=#{noticeTypeId,jdbcType=VARCHAR},</if>
		  <if test="userId != null">user_id=#{userId,jdbcType=VARCHAR},</if>
		  <if test="content != null">content=#{content,jdbcType=LONGVARCHAR},</if>
		  <if test="addTime != null">add_time=#{addTime,jdbcType=TIMESTAMP},</if>
		</set>
		where 1=1 and id = #{id,jdbcType=INTEGER}
	</update>
</mapper>
