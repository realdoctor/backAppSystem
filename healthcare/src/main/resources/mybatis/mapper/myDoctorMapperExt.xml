<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kanglian.healthcare.back.dal.dao.MyDoctorDao">
	<resultMap type="com.kanglian.healthcare.back.dal.pojo.MyDoctor" id="BaseResultMapExt">
		<result property="userId" column="user_id" jdbcType="VARCHAR"/>
		<result property="doctorId" column="doctor_id" jdbcType="VARCHAR"/>
		<result property="addTime" column="add_time" jdbcType="TIMESTAMP"/>
		<result property="hospitalId" column="hospital_id" jdbcType="INTEGER"/>
		<result property="hospitalCode" column="hospital_code" jdbcType="VARCHAR"/>
		<result property="hospitalName" column="hospital_name" jdbcType="VARCHAR"/>
		<result property="doctorCode" column="doctor_code" jdbcType="VARCHAR"/>
		<result property="doctorName" column="doctor_name" jdbcType="VARCHAR"/>
		<result property="deptId" column="dept_id" jdbcType="INTEGER"/>
		<result property="deptCode" column="dept_code" jdbcType="VARCHAR"/>
		<result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
		<result property="hospitalLevel" column="hospital_level" jdbcType="VARCHAR"/>
		<result property="doctorIntro" column="doctor_intro" jdbcType="LONGVARCHAR"/>
		<result property="positional" column="positional" jdbcType="VARCHAR"/>
	</resultMap>
	
	<select id="frontList" resultMap="BaseResultMapExt" parameterType="com.easyway.business.framework.mybatis.query.ConditionQuery">
		SELECT
			t.user_id,
			t.doctor_id,
			t.add_time,
			t1.doctor_code,
			t1.doctor_name,
			t1.doctor_intro,
			t1.positional,
			t1.hospital_id,
			t1.hospital_code,
			t1.hospital_name,
			t1.hospital_level,
			t1.dept_id,
			t1.dept_code,
			t1.dept_name
		FROM
			`my_doctor` t
		LEFT JOIN (
			SELECT
				t.user_id,
				t2.doctor_code,
				t2.doctor_name,
				t2.doctor_intro,
				t2.positional,
				t3.hospital_id,
				t3.hospital_code,
				t3.hospital_name,
				t3.hospital_level,
				t3.dept_id,
				t3.dept_code,
				t3.dept_name
			FROM
				user_doctor t
			LEFT JOIN hospital_register_doctor t2 ON t2.doctor_code = t.doctor_code
			LEFT JOIN hospital_dept t3 ON t3.dept_id = t2.dept_id
		) t1 ON t.doctor_id = t1.user_id
		<include refid="conditionQuery.core" />
		order by
		<choose>
		<when test="paramMap.orderCol!=null">
		${paramMap.orderCol}
		</when>
		<otherwise>
		add_time desc
		</otherwise>
		</choose>
	</select>
</mapper>
