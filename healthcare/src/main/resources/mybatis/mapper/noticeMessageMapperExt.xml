	<select id="queryForList" resultMap="BaseResultMapExt" parameterType="java.lang.Long">
		select
			t.id,
			t.notice_type_id,
			t1.type,
			t.user_id,
			t.content,
			t.add_time
		from notice_message t left join notice_type t1 on t.notice_type_id = t1.id
		where t.id = #{id,jdbcType=INTEGER}
		order by t.id desc
	</select>
	
	<resultMap type="com.kanglian.healthcare.back.dal.pojo.NoticeDiag" id="BaseResultMapX">
		<result property="id" column="id" jdbcType="INTEGER"/>
		<result property="noticeMessageId" column="notice_message_id" jdbcType="VARCHAR"/>
		<result property="diagCode" column="diag_code" jdbcType="VARCHAR"/>
		<result property="diagName" column="diag_name" jdbcType="VARCHAR"/>
	</resultMap>
	
	<!-- 病历更新列表 -->
	<select id="getNoticeDiag" resultMap="BaseResultMapX" parameterType="java.lang.Long">
		select
			t.id,
			t.notice_message_id,
			t.diag_code,
			t.diag_name
		from notice_diag t
		where t.notice_message_id = #{id,jdbcType=INTEGER}
		order by t.id desc
	</select>
	
	<!-- 就诊用药提醒列表 -->
	<select id="getNoticeDiagDrug" resultType="com.kanglian.healthcare.back.dal.pojo.NoticeDiagDrug" parameterType="java.lang.Long">
		select
			t.id,
			t.notice_message_id,
			t.drug_code,
			t.drug_name
		from notice_diag_drug t
		where t.notice_message_id = #{id,jdbcType=INTEGER}
		order by t.id desc
	</select>
	
	<!-- 消息评论列表 -->
	<select id="getNoticeComment" resultType="com.kanglian.healthcare.back.dal.pojo.NoticeComment" parameterType="java.lang.Long">
		select
			t.id,
			t.notice_message_id,
			t.sent_user,
			t.receive_user,
			t.content
		from notice_comment t
		where t.notice_message_id = #{id,jdbcType=INTEGER}
		order by t.id desc
	</select>
</mapper>
